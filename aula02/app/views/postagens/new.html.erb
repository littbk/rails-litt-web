

<%= form_for Postagem.new do |f| %>

  <div class="form-group" >

    <label for="titulo">Título:</label>
    <input type="text" class="form-control" id="titulo" name="postagem[titulo]">
  </div>

  <div class="form-group">
    <label for="conteudo">Conteúdo:</label>
    <input type="text" class="form-control" id="conteudo" name="postagem[conteudo]">
  </div>

  <div class="form-group">
    <label for="autor">Autor:</label>
    <input type="text" class="form-control" id="autor" name="postagem[autor]">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  
<%end%>

